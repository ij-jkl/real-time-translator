{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "gatewayapi.Middleware.RequestLoggingMiddleware": "Information",
      "Yarp.ReverseProxy": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "pythonService": {
        "ClusterId": "pythonCluster",
        "Match": {
          "Path": "/python/{**catch-all}"
        }
      },
      "wsAudio": {
        "ClusterId": "audioStreamingCluster",
        "Match": {
          "Path": "/ws/audio"
        }
      },
      "transcriptorHealth": {
        "ClusterId": "pythonCluster",
        "Match": {
          "Path": "/api/transcriptor/health"
        },
        "Transforms": [
          { "PathPattern": "/healthz" }
        ]
      },
      "audioStreamingHealth": {
        "ClusterId": "audioStreamingCluster",
        "Match": {
          "Path": "/api/audio/health"
        },
        "Transforms": [
          { "PathPattern": "/healthz" }
        ]
      }
    },
    "Clusters": {
      "pythonCluster": {
        "Destinations": {
          "python1": {
            "Address": "http://localhost:8000/"
          }
        }
      },
      "audioStreamingCluster": {
        "Destinations": {
          "audio1": {
            "Address": "http://localhost:9000/"
          }
        }
      }
    }
  }
}
