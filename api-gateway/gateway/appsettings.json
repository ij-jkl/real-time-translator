{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "audioStreamingWs": {
        "Destinations": {
          "instance1": { "Address": "ws://localhost:9000/ws/audio" },
          "instance2": { "Address": "ws://localhost:9001/ws/audio" }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/healthz"
          }
        }
      },
      "transcriptorHttp": {
        "Destinations": {
          "instance1": { "Address": "http://localhost:8000/transcribe_from_audio" },
          "instance2": { "Address": "http://localhost:8001/transcribe_from_audio" }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/healthz"
          }
        }
      }
    },
    "Routes": [
      {
        "RouteId": "ws-audio",
        "ClusterId": "audioStreamingWs",
        "Match": {
          "Path": "/ws/audio"
        },
        "Transforms": [
          { "WebSocket": "true" }
        ]
      },
      {
        "RouteId": "transcribe-audio",
        "ClusterId": "transcriptorHttp",
        "Match": {
          "Path": "/transcribe_from_audio"
        }
      }
    ]
  }
}
